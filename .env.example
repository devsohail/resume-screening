# ⚠️ IMPORTANT: Copy this file to .env and replace with your actual credentials
# DO NOT commit your actual .env file to Git (it's already in .gitignore)

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# S3 Storage
# Note: You can use a single bucket with folder structure (resumes/, models/, data/)
# or separate buckets for each purpose
S3_BUCKET_RESUMES=your-bucket-name
S3_BUCKET_MODELS=your-bucket-name
S3_BUCKET_DATA=your-bucket-name

# AWS Bedrock
BEDROCK_MODEL_ID=amazon.titan-embed-text-v1
BEDROCK_REGION=us-east-1

# Vector Database (Pinecone)
# Sign up at: https://app.pinecone.io/
# For serverless, use region format: us-east-1 (not us-east-1-aws)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=resume-embeddings

# Database (PostgreSQL)
# For local development, use Docker Compose provided PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/resume_screening
DB_HOST=localhost
DB_PORT=5432
DB_NAME=resume_screening
DB_USER=postgres
DB_PASSWORD=postgres

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1
API_TITLE=Resume Screening API
API_DEBUG=True

# Security
# IMPORTANT: Generate strong random keys for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_SECRET=change-this-to-a-random-jwt-secret-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=resume-screening
MLFLOW_S3_ENDPOINT_URL=

# Model Configuration
SIMILARITY_THRESHOLD=70.0
CLASSIFIER_THRESHOLD=0.7
HYBRID_SIMILARITY_WEIGHT=0.4
HYBRID_CLASSIFIER_WEIGHT=0.6

# Lambda Configuration (Optional - only if using AWS Lambda)
LAMBDA_FUNCTION_NAME=resume-screening-inference
LAMBDA_MEMORY_SIZE=1024
LAMBDA_TIMEOUT=30

# SageMaker (Optional - only if using SageMaker)
SAGEMAKER_ROLE=arn:aws:iam::YOUR-ACCOUNT-ID:role/SageMakerRole
SAGEMAKER_INSTANCE_TYPE=ml.m5.xlarge
SAGEMAKER_ENDPOINT_NAME=resume-classifier-endpoint

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development

